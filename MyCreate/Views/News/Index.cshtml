@model IEnumerable<MyCreate.model.News>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <center>

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.img)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Topic)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.categoty)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td style="width:10%">
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <img src="~/img/news/@item.img" width="100" height="100" />
                    </td>
                    <td style="width:20%">
                        @Html.DisplayFor(modelItem => item.Topic)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.categoty.Name)
                    </td>
                    <td >
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id " class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </center>
</div>